<div class="container">
  <h1 class="cards-title">All our Flats (<%= @flats.length %>)</h1>
  <div class="cards">
    <div class="row">
      <% @flats.each do |flat| %>

        <div class="col-xs-6 col-sm-6 col-md-4">
          <div class="card">
            <div>
              <%= image_tag(flat.picture_url, class: "card-picture") %>
            </div>
            <div class="card-head">
              <h2 class="card-name"><%= flat.name %></h2>
              <h3 class="card-address"><%= flat.address %></h3>
              <h3 class="card-details">
                <div><i class="fas fa-users"></i> <%= flat.number_of_guests %></div>
                <div class="card-price"><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></div>
              </h3>
            </div>
            <div class="card-footer">
              <div class="card-actions">
                <%= link_to flat_path(flat), class: "card-more-info" do %>
                  <i class="fas fa-plus"></i>
                <% end %>
                <%= link_to edit_flat_path(flat), class: "card-more-info" do %>
                  <i class="fas fa-pencil-alt"></i>
                <% end %>
                <%= link_to flat_path(flat), method: :delete, class: "card-more-info" do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
